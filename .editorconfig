# EditorConfig ayuda a definir y mantener estilos de codificación consistentes entre editores e IDEs
root = true

# Configuración general para todos los archivos
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

# Configuración para archivos de configuración y de marcado
[*.{json,yml,yaml,md}]
indent_style = space
indent_size = 2

# Configuración para archivos JavaScript
[*.js]
indent_style = space
indent_size = 2

# Configuración para archivos de configuración de npm
[*.{js,json}]
indent_style = space
indent_size = 2

# Configuración para archivos HTML
[*.html]
indent_style = space
indent_size = 2

# Configuración para archivos CSS
[*.css]
indent_style = space
indent_size = 2
